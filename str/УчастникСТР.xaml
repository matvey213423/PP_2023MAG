<Page x:Class="PP_2023MAG.str.УчастникСТР"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PP_2023MAG.str"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="УчастникСТР">

    <Grid>
        <DataGrid x:Name="DGridKlients" AutoGenerateColumns="False" IsReadOnly="True">
            
            <DataGrid.Columns>
                
                <DataGridTextColumn Header="ФИО" Binding="{Binding ФИО}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Количество очков прогресса" Binding="{Binding Звание}" Width="*"/>

                
            </DataGrid.Columns>
            
        </DataGrid>
        <Button Content="Записать своё достижение" HorizontalAlignment="Left" Name="BtnAdd" Click="BtnAdd_Click" Width="404" Margin="0,419,0,0"/>
        <Button Content="Назад" HorizontalAlignment="Right" Name="BtnDelete" Click="BtnDelete_Click" Width="396" Margin="0,419,0,0"/>

    </Grid>
</Page>
